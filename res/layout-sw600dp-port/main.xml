<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <fragment
            class="com.dawathqurantampodcast.view.fragments.PodcastListFragment"
            android:id="@+id/podcast_list"
            android:tag="@string/podcast_list_fragment_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
        <View
            android:id="@+id/divider_first"
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:background="@color/divider_off" />
        <fragment
            class="com.dawathqurantampodcast.view.fragments.EpisodeListFragment"
            android:id="@+id/episode_list"
            android:tag="@string/episode_list_fragment_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>
    <View
        android:id="@+id/divider_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/divider_off" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <fragment
            class="com.dawathqurantampodcast.view.fragments.EpisodeFragment"
            android:id="@+id/episode"
            android:tag="@string/episode_fragment_tag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <fragment
            class="com.dawathqurantampodcast.view.fragments.PlayerFragment"
            android:id="@+id/player"
            android:tag="@string/player_fragment_tag"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </LinearLayout>
</LinearLayout>